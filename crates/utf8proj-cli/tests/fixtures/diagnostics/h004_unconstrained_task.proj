# H004: Unconstrained Task
# Leaf task has no predecessors or date constraints (dangling/orphan task)

project "H004 Test" {
    start: 2025-01-06
    currency: USD
}

resource alice "Alice" {
    rate: 100/day
}

# Task without predecessor or constraint - triggers H004
task task_a "Task A" {
    effort: 5d
    assign: alice
}

# Task with dependency - OK, won't trigger H004
task task_b "Task B" {
    effort: 5d
    assign: alice
    depends: task_a
}

# Unconstrained task - triggers H004
task task_c "Task C" {
    effort: 3d
    assign: alice
}

# Task with date constraint - OK, won't trigger H004
task task_d "Task D" {
    effort: 2d
    assign: alice
    start_no_earlier_than: 2025-01-15
}
